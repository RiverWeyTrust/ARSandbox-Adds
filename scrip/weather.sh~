# weather.sh
#!/bin/bash

# pick up current state
  weather=$( cat /home/sandbox18/src/scrip/weather_file.tmp )
  echo "Current state is " $weather
 
# use case statement to set the assignment to the next cycle value
    case $weather in
     "rain") echo "Changed rain to lava"
            sh /home/sandbox18/src/scrip/switch-to-lava.sh
            echo "lava" > /home/sandbox18/src/scrip/weather_file.tmp
            ;;
     "lava") echo "Changed lava to snow"
            sh /home/sandbox18/src/scrip/switch-to-snow.sh 
            echo "snow" > /home/sandbox18/src/scrip/weather_file.tmp
            ;;
     "snow") echo "Changed snow to rain"
            sh /home/sandbox18/src/scrip/switch-to-water.sh 
            echo "rain" > /home/sandbox18/src/scrip/weather_file.tmp
            ;;
    esac